@model IEnumerable<AppDev1.Models.Cart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section class="h-100 gradient-custom main_slider">
@*<div class="main_slider">*@
  <div class="container py-5">
    <div class="row d-flex justify-content-center my-4">
      <div class="col-md-8">
        <div class="card mb-4" style="max-height: 100%">
          <div class="card-header py-3">

            <h5 class="mb-0">Cart</h5>
          </div>

          <div class="card-body">
            <!-- Single item -->
            @foreach (var item in Model)
            {
            <div class="row" style="margin-bottom: 2%;">
              <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                <!-- Image -->
                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                  <img src="@("/images/" + item.Book!.ImgUrl)"
                    class="w-100" alt="" />
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                  </a>
                </div>
                <!-- Image -->
              </div>

              <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                <!-- Data -->
                <p><strong>@item.Book.Title</strong></p>
                
                <button type="button" class="@*btn btn-primary btn-sm me-1 mb-2*@ btn btn-danger btn-sm mb-2" data-mdb-toggle="tooltip"
                  title="Delete item">
                  <a asp-controller="Cart" asp-action="DeleteItem" asp-route-isbn="@item.BookIsbn">Delete Item</a>
                </button>
                <button type="button" class="btn btn-danger btn-sm mb-2" data-mdb-toggle="tooltip"
                  title="Edit quantity">
                  <a asp-controller="Cart" asp-action="Edit" asp-route-uid="@item.UserId" asp-route-isbn="@item.BookIsbn">Edit Quantity</a>
                 @* <i class="fa fa-pencil-square-o"></i>*@
                </button>
                <!-- Data -->
              </div>

              <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <!-- Quantity -->
                <div class="d-flex mb-4" style="max-width: 300px">
                  @*<button class="btn btn-primary px-3 me-2"
                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                    <i class="fa fa-minus"></i>
                  </button>*@

                  <div class="form-outline">
                    @*<input id="form1" min="0" name="quantity" value="1" type="number" class="form-control" />*@
                    <label class="form-label" for="form1">Quantity: @item.Quantity</label>
                  </div>

                  @*<button class="btn btn-primary px-3 ms-2"
                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                    <i class="fa fa-plus"></i>
                  </button>*@
                </div>
                <!-- Quantity -->

                <!-- Price -->
                <p class="text-start text-md-center">
                    Price:
                  <strong>@item.Book.Price</strong>
                </p>
                <!-- Price -->
              </div>
            </div>
            
          }
          </div>
          
        </div>
        
        @*<div class="card mb-4">
          <div class="card-body">
            <p><strong>Expected shipping delivery</strong></p>
            <p class="mb-0">05.06.2022 - 05.12.2022</p>
          </div>
        </div>*@
       @* <div class="card mb-4 mb-lg-0">
          
        </div>*@
      </div>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Summary</h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Products
                <span>@Model.Sum(c=>c.Book.Price * c.Quantity)</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                Shipping
                <span>Gratis</span>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                  <strong>Total amount</strong>
                  <strong>
                    <p class="mb-0">(including VAT)</p>
                  </strong>
                </div>
                <span><strong>@Model.Sum(c=>c.Book.Price * c.Quantity)</strong></span>
              </li>
            </ul>

           @* <button type="button" class="btn btn-primary btn-lg btn-block">
              Go to checkout
              <a asp-controller="Order" asp-action="Checkout"></a>
            </button>*@
            <button type="button" class="btn btn-primary btn-lg btn-block" data-mdb-toggle="tooltip"
                  title="Go to checkout">
                 
                  <a asp-controller="Book" asp-action="Checkout" style="color:red;"> Checkout </a>
                 @* <i class="fa fa-pencil-square-o"></i>*@
                </button>
          </div>
        </div>
      </div>
    </div>
  </div>
@*</div>*@
</section>