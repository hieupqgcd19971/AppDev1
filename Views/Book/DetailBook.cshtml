        </div>

        <div class="row">
            <div class="col-lg-7">
                <div class="single_product_pics">
                    <div class="row">
                        <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
                        </div>
                        <div class="col-lg-9 image_col order-lg-2 order-1">
                            <div class="single_product_image">
                                <div class="single_product_image_background">
                                     <img src="@("/images/" + Model.ImgUrl)" asp-append-version="true"  style="width: 100%;height:80%"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="product_details">
                    <div class="product_details_title">
                        <h2>@Model.Title</h2>
                        <p>@Model.Desc</p>
                    </div>
                    <div class="free_delivery d-flex flex-row align-items-center justify-content-center">
                        <span class="ti-truck"></span><span>free delivery</span>
                    </div>
                    @*<div class="original_price">$629.99</div>*@
                    <div class="product_price">@Model.Price</div>

                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                        <!-- Quantity -->
                        <form   asp-action="AddToCart" method="get">
                            <div class="d-flex mb-4" style="max-width: 300px">
                                <div class="form-outline">
                                    <label class="form-label" for="form1">Quantity</label>
                                    <input id="form1" min="0" name="quantity" value="1" type="number" class="form-control" />
                                </div>
                                <input style="display:none"  name="Isbn" value="@Model.BookIsbn"/>
                                <input style="opacity:1;visibility:visible !important;" class="red_button add_to_cart_button" type="submit" value="Add to cart" />
                      

                            </div>
                        </form>


